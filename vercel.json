{
  "installCommand": "npm install",
  "buildCommand": "npm run build -w backend && npm run build -w frontend",
  "outputDirectory": "frontend/dist",
  "framework": null,
  "rewrites": [
    { "source": "/clients", "destination": "/api" },
    { "source": "/clients/(.*)", "destination": "/api" },
    { "source": "/engine/(.*)", "destination": "/api" }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "backend/**"
    }
  }
}
